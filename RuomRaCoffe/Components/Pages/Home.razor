@page "/"

<PageTitle>RuomRaCoffe - Đặt đồ uống online</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="pa-4">
    <!-- Hero Section -->
    <MudPaper Class="pa-6 mb-4" Elevation="1" Style="background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);">
        <MudStack AlignItems="AlignItems.Center" Spacing="4">
            <MudIcon Icon="@Icons.Material.Filled.LocalCafe" Size="Size.Large" Color="Color.White" />
            <MudText Typo="Typo.h3" Color="Color.White" Class="text-center">
                Chào mừng đến với RuomRaCoffe
            </MudText>
            <MudText Typo="Typo.h6" Color="Color.White" Class="text-center">
                Đặt đồ uống yêu thích của bạn ngay bây giờ
            </MudText>
            <MudButton Variant="Variant.Filled"
                       Color="Color.White"
                       Size="Size.Large"
                       StartIcon="@Icons.Material.Filled.Menu"
                       OnClick="@(() => Navigation.NavigateTo("/menu"))">
                Xem Menu
            </MudButton>
        </MudStack>
    </MudPaper>

    <!-- Features -->
    <MudGrid Class="mb-4">
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 text-center" Elevation="1">
                <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Color="Color.Primary" Size="Size.Large" />
                <MudText Typo="Typo.h6" Class="mt-2">Giao hàng nhanh</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Giao hàng trong 30 phút
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 text-center" Elevation="1">
                <MudIcon Icon="@Icons.Material.Filled.FreshCoffee" Color="Color.Primary" Size="Size.Large" />
                <MudText Typo="Typo.h6" Class="mt-2">Cà phê tươi</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    100% nguyên chất
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 text-center" Elevation="1">
                <MudIcon Icon="@Icons.Material.Filled.Payment" Color="Color.Primary" Size="Size.Large" />
                <MudText Typo="Typo.h6" Class="mt-2">Thanh toán dễ dàng</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Nhiều phương thức
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 text-center" Elevation="1">
                <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Primary" Size="Size.Large" />
                <MudText Typo="Typo.h6" Class="mt-2">Chất lượng cao</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Được đánh giá 5 sao
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <!-- Quick Actions -->
    <MudPaper Class="pa-4" Elevation="1">
        <MudText Typo="Typo.h6" Class="mb-4">Thao tác nhanh</MudText>
        <MudGrid>
            <MudItem xs="12" sm="6" md="4">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           FullWidth="true"
                           StartIcon="@Icons.Material.Filled.Menu"
                           OnClick="@(() => Navigation.NavigateTo("/menu"))">
                    Xem Menu
                </MudButton>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Secondary"
                           FullWidth="true"
                           StartIcon="@Icons.Material.Filled.ShoppingCart"
                           OnClick="@(() => Navigation.NavigateTo("/cart"))">
                    Giỏ hàng
                </MudButton>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Success"
                           FullWidth="true"
                           StartIcon="@Icons.Material.Filled.History"
                           OnClick="@(() => Navigation.NavigateTo("/orders"))">
                    Đơn hàng
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>
