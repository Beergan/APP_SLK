@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Class="ml-3">RuomRaCoffe POS</MudText>
        <MudSpacer />
        <MudText Typo="Typo.body2" Class="mr-3">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</MudText>
    </MudAppBar>
    
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="1">
        <NavMenu />
    </MudDrawer>
    
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
